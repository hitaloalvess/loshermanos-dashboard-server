generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Role {
    id          String   @id @default(uuid())
    name        String
    description String
    created_at  DateTime @default(now())

    @@map("roles")
}

model Permission {
    id          String   @id @default(uuid())
    name        String
    description String
    created_at  DateTime @default(now())

    @@map("permissions")
}
